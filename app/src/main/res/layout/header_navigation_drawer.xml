<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:background="?attr/colorPrimary" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/components_header_margin"
        android:layout_marginBottom="@dimen/components_header_margin"
        android:layout_marginStart="@dimen/components_header_margin"
        android:textSize="@dimen/components_textView_size_title"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:text="@string/app_name"/>

</LinearLayout>